extends layout

block content
  div.flex.w-1-2.mx-auto.my-20.justify-between
    div.w-9-20.flex.flex-col.justify-between.tracking-tighter
      p.text-6xl.font-medium Read, Create, and Build a Community!
      p.text-gray-700.text-lg.pr-8.pl-2 Share your favorite cars to everyone, and see what others shared! Build a community out of it and have fun reading together!
      div.flex.gap-5.text-lg
        button.bg-blue-600.text-white.font-bold.py-1.px-7.rounded Create 
        button.bg-transparent.font-semibold.py-1.px-7.border.border-blue-600.rounded-md Browse
    div.w-9-20
      img(src="/images/car1.png", alt="car picture").rounded-sm.h-96
  div.w-29-50.flex.mx-auto.flex-col
    p.font-medium.text-2xl.text-gray-700 Latest Cars
    div.mt-10.flex.items-end.justify-between
      each car in cars
        a(href=`/cars/${car.url}`) 
          div.w-52
            div.w-52.h-32.flex.items-center
              img(src=car.imgUrl, alt="car image").w-full.min-h-75
            p.mb-2.text-center.text-gray-700.font-semibold #{car.name}
      else 
        p No cars

  
