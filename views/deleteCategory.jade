extends layout

block content
  div.flex.w-1-2.mx-auto.my-20.justify-between.flex-col
    div
      p.text-blue-700.text-lg.font-bold remove
      div.flex.items-center.justify-between.mb-5
        p.text-6xl.font-medium.pr-28 Remove Category: #{category}
    if (carList == undefined || carList.length < 1)
      form(action="" method="POST")
          button(type="submit").bg-red-600.text-white.font-bold.py-1.px-7.rounded.mr-5 Remove
    else 
      div.mt-10
        p.font-medium.text-3xl.font-medium Remove the following car instances before removing the category:
        each car in carList 
          a(href=`${car.url}`) 
            div.flex.border.border-black.border-opacity-20.mt-5.letter
              img(src=car.imgUrl, alt="").w-1-4.p-7
              div.w-100.text-sm.py-3.px-3.flex.flex-col
                p.font-bold.text-xl #{car.name}
                p #{car.description}
                div.flex.gap-5.mt-auto
                  p Category:#{car.category.name}
                  p Year:#{car.year}
                  p Price:USD #{car.price}
      
