extends layout 

block content
  a(href="/new/category") 
    button.bg-blue-500.hover.text-white.font-bold.py-2.px-4.rounded.focus.flex.mx-auto.my-5(type="button") Create Category
  div.flex.w-1-2.mx-auto.my-10.justify-between.flex-col
    form.bg-white.shadow-md.rounded.px-8.pt-6.pb-8.mb-4
      p.text-blue-700.font-bold.text-3xl.mb-4 New Car
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="username") Name:
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus(id="username" type="text" placeholder="Car Name")
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="description") Description:
        textarea.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus.resize-none(id="description" type="text" placeholder="Description"  cols="30", rows="6")
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="category") Category:
        select.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus(id="category") 
          option(value='' selected disabled hidden) Choose a category
          each category in categoriesList
            option(value = category._id) #{category.name}
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="year") Year:
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus(id="year" type="text" placeholder="Description")
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="price") Price:
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus(id="price" type="text" placeholder="Description")
      div.flex.items-center.justify-between
        button.bg-blue-500.hover.text-white.font-bold.py-2.px-4.rounded.focus(type="button") Create
        a.inline-block.align-baseline.font-bold.text-sm.text-blue-500.hover(href="/") Back
   
