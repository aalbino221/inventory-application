extends layout 

block content
  div.flex.w-1-2.mx-auto.my-10.justify-between.flex-col
    form(action="" method="POST").bg-white.shadow-md.rounded.px-8.pt-6.pb-8.mb-4
      p.text-blue-700.font-bold.text-3xl.mb-4 Update Car: #{car._id}
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="name") Name:
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus(id="name" name="name" type="text" placeholder="Car Name"  value= car.name)
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="description") Description:
        textarea.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus.resize-none(id="description" name="description" placeholder="Description"  cols="30", rows="6") #{car.description}
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="category") Category:
        select.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus(id="category" name="category") 
          option(value='' disabled hidden) Choose a category
          each category in categoriesList
              option(value=category._id selected=(category.name === car.category.name)) #{category.name}
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="year") Year:
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus(id="year" name="year" type="text" placeholder="Description" value= car.name)
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="price") Price:
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus(id="price" name="price" type="text" placeholder="Description" value= car. price)
      div.mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="imgUrl") Img Url:
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus(id="imgUrl" name="imgUrl" type="text" placeholder="Img Url" required minlength="3" value= car.imgUrl)
      div.flex.items-center.justify-between
        button.bg-blue-500.hover.text-white.font-bold.py-2.px-4.rounded.focus(type="submit") Update
        a.inline-block.align-baseline.font-bold.text-sm.text-blue-500.hover(href="/") Back
   
